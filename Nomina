//FALTAN LOS GETETERS Y SETTER, ASÍ COMO LOS CONSTRUCTORES

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace MetodosNomina
{
    class Nomina
    {
    
// METODOS PARA CALCULAR LAS HORAS EXTRA
// DESARROLLADOR: JOAQUIN CANCA
// ÚLTIMA REVISIÓN EL 22//11/2015 20:20

        //Calculamos la existencia de horas extra así como de su valor
        private int horasExtra (int horas)
        {
        
            int res;
                if (horas<40)
            {
                //Hay hras extra
                res = horas - 40;
            } else
            //No hay horas extra
            {
                res = 0;
            }
            return res;

        }
        
        // METODOS PARA CALCULAR EL SALARIO EXTRA
	// DESARROLLADOR: JOAQUIN CANCA
	// ÚLTIMA REVISIÓN EL 22//11/2015 20:20
	
        //Calculamos el salario extra
        private float salarioExtra (int horasExtra,float eurosHora)
        {
            
            float res;
            res = (eurosHora * 1.5F) * horasExtra; 
            //El salario horas se corresponde con el salario de las horas ordinarias y será obtenido del fichero de configuraciín
            return res;
            
        }
        
        
// METODOS PARA DESARROLLAR EL SALARIO BRUTO
// DESARROLLADORES: JOAQUIN Y SAMUEL
// ÚLTIMA REVISIÓN EL 24//11/2015 12:05

        //Método para calcular el salario Bruto
		private float salarioBruto(int horas, float eurosHora, float salarioExtra)
		{
		
			float res;
			res = (horas * eurosHora) + salarioExtra;
			return res;
			
		}
		
        //Método para calcular los impuestos a pagar
        private float Impuesto (float salarioBruto)
        {
        
            float res;
            res = salarioBruto * 0.16F; //0.16 es el valor del pocentaje de las retenciones el cual deberá ser obtenido del fichero de configuración
            return res;

        }
        // METODOS PARA CALCULAR EL SALARIO BRUTO
	// DESARROLLADOR: JOAQUIN CANCA
	// ÚLTIMA REVISIÓN EL 22//11/2015 20:20

        //Método para calcular el salario neto
        private float Neto (float salarioBruto,float impuesto)
        {
        
            float res;
            res = salarioBruto - impuesto;
            return res;
            
        }
    }
}
